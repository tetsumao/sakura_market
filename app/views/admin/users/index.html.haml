%h2 ユーザ一覧

%table.table
  %thead.thead-dark
    %tr
      %th{ scope: 'col' } ID
      %th{ scope: 'col' } メールアドレス
      %th{ scope: 'col' } ユーザ名
      %th{ scope: 'col' } 郵便番号
      %th{ scope: 'col' } 住所
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.id
        %td= user.email
        %td= user.user_name
        %td= user.zip
        %td= user.address
        %td= link_to '表示', admin_user_path(user), class: 'btn btn-outline-dark btn-sm'
        %td= link_to '編集', edit_admin_user_path(user), class: 'btn btn-outline-info btn-sm'
        %td= link_to '削除', admin_user_path(user), class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: '削除してよろしいですか？' }
= paginate @users
